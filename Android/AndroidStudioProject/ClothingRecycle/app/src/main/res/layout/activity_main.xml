<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.clothingrecycle.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_scan"
            android:textSize="@dimen/content_tv_size"
            android:textAlignment="center"
            android:textColor="@android:color/black"/>
        <ImageView
            android:id="@+id/iv_quickmark"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/tv_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_launcher"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_quickmark"
            android:layout_marginTop="10dp"
            android:text="@string/info_default"
            android:textSize="@dimen/content_tv_size"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"/>
        <Button
            android:id="@+id/btn_interfacetest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_info"
            android:visibility="invisible"
            android:text="柜子接口测试"/>

        <Button
            android:id="@+id/btn_make_qucode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@id/btn_interfacetest"
            android:layout_toRightOf="@id/btn_interfacetest"
            android:visibility="invisible"
            android:text="生成二维码"/>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@id/btn_interfacetest"
            android:layout_toRightOf="@id/btn_make_qucode"
            android:visibility="visible"
            android:text="初始化"/>

    </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_stretch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_stretch"/>

</RelativeLayout>
