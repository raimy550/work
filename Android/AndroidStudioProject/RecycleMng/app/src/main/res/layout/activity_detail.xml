<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.clothingrecycle.MainActivity">
    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:text="柜子详情"
        android:textSize="@dimen/title_font"
        android:background="@android:color/holo_green_light"/>
    <!--
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="100dp"
        android:layout_height="@dimen/title_height"
        android:layout_marginLeft="10dp"
        android:text="@string/back"
        android:textSize="30sp"
        android:background="@android:color/holo_green_light"/>
        -->
    <LinearLayout
        android:id="@+id/tv_back"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:gravity="center">
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/back"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:padding="10dp"
        android:layout_below="@+id/tv_detail_title"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_gridno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="柜子编号："
                android:textSize="@dimen/detail_text_font"/>
            <TextView
                android:id="@+id/tv_gridno_content"
                android:layout_toRightOf="@+id/tv_gridno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc-001"
                android:textSize="@dimen/detail_text_font"/>

            <TextView
                android:id="@+id/tv_gridcount"
                android:layout_below="@id/tv_gridno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="箱子总数："
                android:textSize="@dimen/detail_text_font"/>
            <TextView
                android:id="@+id/tv_gridcount_content"
                android:layout_toRightOf="@+id/tv_gridcount"
                android:layout_alignBaseline="@+id/tv_gridcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="@dimen/detail_text_font"/>

            <TextView
                android:id="@+id/tv_gridused"
                android:layout_below="@id/tv_gridcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已经使用："
                android:textSize="@dimen/detail_text_font"/>
            <TextView
                android:id="@+id/tv_gridused_content"
                android:layout_alignBaseline="@+id/tv_gridused"
                android:layout_toRightOf="@+id/tv_gridused"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="@dimen/detail_text_font"/>

            <TextView
                android:id="@+id/tv_gridaddr"
                android:layout_below="@id/tv_gridused"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="柜子地址："
                android:textSize="@dimen/detail_text_font"/>
            <TextView
                android:id="@+id/tv_gridaddr_content"
                android:layout_alignBaseline="@+id/tv_gridaddr"
                android:layout_toRightOf="@+id/tv_gridaddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深圳市宝安"
                android:textSize="@dimen/detail_text_font"/>
        </RelativeLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_content"
                android:paddingTop="20dp">

                <Button
                    android:id="@+id/btn_clean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我要收件"/>

                <Button
                    android:layout_marginLeft="20dp"
                    android:id="@+id/btn_locate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="柜子位置"
                    />
            </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
